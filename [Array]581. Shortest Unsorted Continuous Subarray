class Solution {
    public int findUnsortedSubarray(int[] nums) {
        int[] snums = nums.clone();
        Arrays.sort(snums);
        int start = nums.length,end = 0;
        for (int i = 0; i < snums.length; i++){
            if (snums[i] != nums[i]){
                start = i;
                break;
            }
        }
        for (int i = snums.length - 1; i >= 0; i--){
            if (snums[i] != nums[i]){
                end = i;
                break;
            }
        }
        return (end - start >= 0 ? end - start + 1 : 0);
    }
}
